<?xml version="1.0"?>
<launch>

    <arg name="rviz" default="true" />
    <arg name="project" default="multi_sensor_mapping"/>

    <!-- Lidar IMU Mapper -->
    <node pkg="$(arg project)" type="lidar_imu_odometry_node" name="lidar_imu_odometry_node" output="screen" respawn="false">
    <!-- <node pkg="$(arg project)" type="lidar_imu_odometry_node" name="lidar_imu_odometry_node" output="screen" respawn="false" launch-prefix="gdb -ex run &#45;&#45;args"> -->
        <param name="config_name" value="mapping_backpack_v4"/>
    </node>


    <!--- Rviz -->
    <group if="$(arg rviz)">
      <node pkg="rviz" type="rviz" name="$(arg project)_rviz" args="-d $(find multi_sensor_mapping)/rviz/lidar_mapper.rviz" />
    </group>
</launch>
